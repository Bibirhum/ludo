{% extends 'layout.html.twig' %}

{% block title %}Ludo |
    {% if form_type == 'update' %}
        Ajout d'un
    {% else %}
        Mise à jour des infos sur un
    {% endif %}jeu dans une ludothèque
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet">
    <link href="{{ asset('landing_page/css/addedNewGameUser.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <style>

    </style>

    <div class="container fiche-jeu">

        {% if form_type == 'update' %}
            <h1 class="title-shadow">
                Je change d'avis !
            </h1>
        {% else %}
            <h1 class="title-shadow">
                J'ajoute ce jeu !
            </h1>
            <h4 class="title-shadow">...et je donne mon avis ; ) </h4>
        {% endif %}

        <h2 class="title-shadow mt-5">Jeu : {{ game.name }}</h2>
        <div class="mb-5">
        <img src="{{ asset(game.image) }}">
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(usergame_form) }}
            {{ form_row(usergame_form.rating) }}
            {{ form_row(usergame_form.commentary) }}
            {{ form_row(usergame_form.playsGame) }}
            {{ form_row(usergame_form.ownsGame) }}
            {% if buttonSend == 'sent' %}
                {{ form_row(usergame_form.submit, {'attr': {'class':'displayNone'}}) }}
            {% endif %}
            {% if form_type == 'update' %}
                {{ form_row(usergame_form.submit, {'label': 'Mettre à jour', 'label_attr': {'class':'formFields'}}) }}
            {% else %}
                {{ form_row(usergame_form.submit, {'label': 'Ajouter', 'label_attr': {'class':'formFields'}}) }}
            {% endif %}
        {{ form_end(usergame_form) }}

        <a href="{{ path('user_profile') }}" class="btn btn-primary">Revenir à mon compte</a>

    </div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script src="https://kit.fontawesome.com/cef3058f65.js"></script>
{% endblock %}