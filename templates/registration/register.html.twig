{% block body %}

{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

<div class="simple-login-container mx-auto">
    <h1>S'inscrire</h1>


    <div class="row d-flex flex-nowrap mx-auto justify-content-around">

        <div class="col-md-12 form-group">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {'label_attr': {'class':'formFields'}}) }}
            {{ form_row(registrationForm.first_name, {'label_attr': {'class':'formFields'}}) }}
            {{ form_row(registrationForm.last_name, {'label_attr': {'class':'formFields'}}) }}
            {{ form_row(registrationForm.email, {'label_attr': {'class':'formFields'}}) }}
            {{ form_row(registrationForm.plainPassword, {'label_attr': {'class':'formFields'}}) }} 
        </div>

        <div class="col-md-12 form-group">
            {{ form_row(registrationForm.address, {'label_attr': {'class':'formFields'}}) }} 
