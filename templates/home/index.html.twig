<body>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">
    <div class="container">
      <a class="navbar-brand" href="#"><img src="{{ asset('landing_page/img/logoludowhitesmall.png') }}"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
          </li>
{% if is_granted('IS_AUTHENTICATED_FULLY')%}
          <li class="nav-item">
            <a class="nav-link" href="{{ path('user_profile') }}">Mon compte</a>
          </li>
{% endif %}
        </ul>
      </div>
    </div>
  </nav>

  <header class="masthead text-center text-white">
    <div class="masthead-content">
      <div class="container">
        <div class="heading-main">
        <img src="{{ asset('landing_page/img/logoludowhite.png') }}">
        </div>
        <div class="heading-secondary">
        <h2 class="masthead-subheading mb-0 slogan">Les fans de jeux de plateau</h2>
        </div>
        <a href="{{ path('app_register') }}" class="btn btn-primary btn-xl rounded-pill mt-5 btn--animated cta">Je m'inscris !</a>
      </div>
    </div>
    <div class="bg-circle-1 bg-circle"></div>
    <div class="bg-circle-2 bg-circle"></div>
